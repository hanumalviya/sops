@using SOPS.WebUI.Areas.Administration.ViewModels.Students
@model StudentViewModel

<div id="add-student-dialog" class="dialog"
    data-bind="jqDialog: { resizable: false, autoOpen: false, modal: true, width: 600, title: 'Student - dodawanie' },  dialogVisible: isAddStudentDialogOpen">
    @using (Html.BeginForm("Add", "Students", FormMethod.Post, new { id = "addStudentForm", data_bind = "submit: submitAddStudentDialog"}))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Department)
        @Html.HiddenFor(m => m.Course)
        <div class="add-message"></div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Name)</div>
            <div class="name">@Html.LabelFor(m => m.Name)</div>
            <div class="value">@Html.EditorFor(m => m.Name)</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.LastName)</div>
            <div class="name">@Html.LabelFor(m => m.LastName)</div>
            <div class="value">@Html.EditorFor(m => m.LastName)</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Department)</div>
            <div class="name">@Html.LabelFor(m => m.Department)</div>
            <div class="value"><input type="text" disabled  required value="@Model.Department" /></div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Course)</div>
            <div class="name">@Html.LabelFor(m => m.Course)</div>
            <div class="value"><input type="text" disabled  required value="@Model.Course" /></div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Mode)</div>
            <div class="name">@Html.LabelFor(m => m.Mode)</div>
            <div class="value">@Html.DropDownListFor(m => m.Mode, new SelectList(ViewBag.Mode, "Value", "Text", Model.Mode))</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Album)</div>
            <div class=" name">@Html.LabelFor(m => m.Album)</div>
            <div class="value">@Html.EditorFor(m => m.Album)</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.City)</div>
            <div class="name">@Html.LabelFor(m => m.City)</div>
            <div class="value">@Html.EditorFor(m => m.City)</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Street)</div>
            <div class="name">@Html.LabelFor(m => m.Street)</div>
            <div class="value">@Html.EditorFor(m => m.Street)</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.PostalCode)</div>
            <div class="name">@Html.LabelFor(m => m.PostalCode)</div>
            <div class="value">@Html.EditorFor(m => m.PostalCode)</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Email)</div>
            <div class="name">@Html.LabelFor(m => m.Email)</div>
            <div class="value">@Html.EditorFor(m => m.Email)</div>
        </div>
        <div class="property">
            <div class="validation">@Html.ValidationMessageFor(m => m.Phone)</div>
            <div class="name">@Html.LabelFor(m => m.Phone)</div>
            <div class="value">@Html.EditorFor(m => m.Phone)</div>
        </div>
        <div class="buttons">
            <input type="submit" class="green" value="Zapisz"/>
            <input type="button" value="Anuluj" data-bind="click: closeAddStudentDialog"/>
        </div>
    }
</div>