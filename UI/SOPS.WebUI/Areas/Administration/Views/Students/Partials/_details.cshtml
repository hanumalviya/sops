@model SOPS.WebUI.Areas.Administration.ViewModels.Students.StudentViewModel

<h4 class="row">
    Dane osobowe
</h4>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Name)</div>
    <div class="col_3 value" data-bind="text: student().Name"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.LastName)</div>
    <div class="col_3 value" data-bind="text: student().LastName"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Department)</div>
    <div class="col_3 value" data-bind="text: student().Department"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Course)</div>
    <div class="col_3 value" data-bind="text: student().Course"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Mode)</div>
    <div class="display-only-select col_3 value">
        @Html.DropDownList("Mode", new SelectList(ViewBag.Mode, "Value", "Text"), new {disabled=true, data_bind="value: student().Mode" })
    </div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Album)</div>
    <div class="col_3 value" data-bind="text: student().Album"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Email)</div>
    <div class="col_3 value" data-bind="text: student().Email"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Phone)</div>
    <div class="col_3 value" data-bind="text: student().Phone"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.City)</div>
    <div class="col_3 value" data-bind="text: student().City"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.Street)</div>
    <div class="col_3 value" data-bind="text: student().Street"></div>
</div>
<div class="row property">
    <div class="col_2 name">@Html.LabelFor(m => m.PostalCode)</div>
    <div class="col_3 value" data-bind="text: student().PostalCode"></div>
</div>