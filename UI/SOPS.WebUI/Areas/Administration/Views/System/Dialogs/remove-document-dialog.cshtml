<div id="remove-document-dialog" class="dialog" 
     data-bind="jqDialog: { resizable: false, autoOpen: false, modal: true, width: 600, title: 'Usuwanie' },  dialogVisible: isRemoveDocumentDialogOpen">
    @using (Html.BeginForm("DeleteDocument", "System", FormMethod.Post, new {id = "removeDocumentForm"}))
    {   
        <input type="hidden" name="Id" data-bind="value: documentId()"/>
        <div class="delete-message"></div>
        <div>
            Czy napewno chcesz usunąć dokument?
        </div>
        <div class="buttons">
            <input type="submit" class="red" value="Usuń"/>
            <input type="button" value="Anuluj" data-bind="click: closeRemoveDocumentDialog"/>
        </div>
    }
</div>