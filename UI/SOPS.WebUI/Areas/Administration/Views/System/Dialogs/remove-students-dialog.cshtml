<div id="remove-students-dialog" class="dialog" 
     data-bind="jqDialog: { resizable: false, autoOpen: false, modal: true, width: 600, title: 'Usuwanie' },  dialogVisible: isRemoveStudentsDialogOpen">
    @using (Html.BeginForm("RemoveAllStudents", "System", FormMethod.Post, new { id = "removeStudentsForm" }))
    {   
        <input type="hidden" name="Id"/>
        <div class="delete-message"></div>
        <div>
            Czy napewno chcesz usunąć wszystkie dane studentów?
        </div>
        <div class="buttons">
            <input type="submit" class="red" value="Usuń"/>
            <input type="button" value="Anuluj" data-bind="click: closeRemoveStudentsDialog"/>
        </div>
    }
</div>