

<div id="remove-department-dialog" class="dialog" 
     data-bind="jqDialog: { resizable: false, autoOpen: false, modal: true, width: 600, title: 'Usuwanie' },  dialogVisible: isRemoveDepartmentDialogOpen">
    @using (Html.BeginForm("DeleteDepartment", "University", FormMethod.Post, new {id = "removeDepartmentForm"}))
    {   
        <input type="hidden" name="Id" data-bind="value: departmentId" />
        <div class="delete-message"></div>
        <div>
            Czy napewno chcesz usunąć wydział?<br/>
            Powiązane z nim kierunki i dane studentów zostaną usunięte.
        </div>
        <div class="buttons">
            <input type="submit" class="red" value="Usuń"/>
            <input type="button" value="Anuluj" data-bind="click: closeRemoveDepartmentDialog"/>
        </div>
    }
</div>