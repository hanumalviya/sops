

<div id="remove-course-dialog" class="dialog" 
     data-bind="jqDialog: { resizable: false, autoOpen: false, modal: true, width: 600, title: 'Usuwanie' },  dialogVisible: isRemoveCourseDialogOpen">
    @using (Html.BeginForm("DeleteCourse", "University", FormMethod.Post, new {id = "removeForm"}))
    {   
        <input type="hidden" name="Id" data-bind="value: courseId"/>
        <div class="delete-message"></div>
        <div>
            Czy napewno chcesz usunąć kierunek?<br/>
            Powiązane z nim dane studentów zostaną usunięte.
        </div>
        <div class="buttons">
            <input type="submit" class="red" value="Usuń"/>
            <input type="button" value="Anuluj" data-bind="click: closeRemoveCourseDialog"/>
        </div>
    }
</div>