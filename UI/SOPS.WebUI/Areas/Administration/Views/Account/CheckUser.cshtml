@model string

@{
    ViewBag.Title = "Sprawdzanie użytkownika";
}
<div class="row">
    <h2 class="pre_2 col_4">Sprawdzanie użytkownika</h2>
</div>
<div class="row">
    @using (Html.BeginForm("CheckUser", "Account", FormMethod.Post, new { @class = "pre_2 col_10 last" }))
    {
        <div class="row">
            @Html.ValidationSummary()
        </div>
        <div class="row">
            <div class="col_2">
                <label for="userName">Nazwa użytkownika:</label>
            </div>
            <div class="col_3">
                <input type="text" id="userName" name="UserName" required/>
             </div>
        </div>
        <div class="row">
            <div class="col_2 pre_4">
                <input type="submit" value="Dalej"/>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
